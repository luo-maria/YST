<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">


<!--    社团管理员可以看到其他人的申请详情    -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/blue">

        <ImageView
            android:id="@+id/back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            app:srcCompat="@android:drawable/ic_media_rew" />
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="22dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginRight="40dp"
            android:layout_marginTop="10dp"
            android:text="申请详情" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#BFE1EDF6">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:layout_height="80dp"
            android:background="@drawable/shape_white_shadow"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                app:srcCompat="@mipmap/addstu1" />

            <TextView
                android:id="@+id/applicantName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:layout_marginTop="18dp"
                android:textSize="18dp"
                android:text="小兔"
                android:textColor="#042F51"/>
            <TextView
                android:id="@+id/applicantGender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:layout_marginTop="18dp"
            android:textSize="16dp"
            android:text="女"
            android:textColor="#484B4E"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="60dp"
                android:layout_marginTop="18dp"
                android:textSize="14dp"
                android:text="联系方式："
                android:textColor="#484B4E"/>
            <TextView
                android:id="@+id/applicantNumber"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:textSize="14dp"
                android:text="17853811111"
                android:textColor="#484B4E"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:background="@drawable/shape_white_shadow">
            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:text="申请原因"
                android:textColor="#000"
                android:textSize="24dp"
                android:gravity="center" />

            <TextView
                android:id="@+id/applicantReason"
                android:layout_width="350dp"
                android:layout_height="230dp"
                android:layout_gravity="center"
                android:lineSpacingExtra="9dp"
                android:padding="20dp"
                android:text="         首先是自己对心里社团感兴趣。其次是加入这个社团可以锻炼自己的能力。然后是加入报社能够虚心学习，吸取前辈们的经验，建立起良好的人际关系网。重要的是加入报社后一定要树立一个长远的目标，为了主编的位置而奋斗。"
                android:textColor="#484B4E"
                android:textSize="16dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:padding="20dp">
            <Button
                android:id="@+id/pass"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:background="@drawable/shape_blue_wihte_gradual"
                android:text="通 过" />
            <Button
                android:id="@+id/refuse"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:background="@drawable/shape_orange_wihte_gradual"
                android:text="拒 绝" />
        </LinearLayout>
        <EditText
            android:id="@+id/feedback"
            android:layout_width="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="15dp"
            android:layout_height="130dp"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:hint="请写下您的理由：\n\n\n"
            android:background="@drawable/shape_white_shadow"
         />


    </LinearLayout>

</LinearLayout>