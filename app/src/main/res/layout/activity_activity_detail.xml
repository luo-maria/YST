<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#2196F3"
        android:gravity="center"
        android:padding="5dp">
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center"
            android:textSize="22dp"
            android:textStyle="bold"
            android:text="活动详情"
            android:textColor="@color/white"  />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/shape_login_form"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_login_form"
                android:descendantFocusability="blocksDescendants"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="match_parent"
                    android:layout_height="210dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="5dp"
                    android:clickable="true"
                    android:focusable="false"
                    android:src="@mipmap/moren" />

                <RelativeLayout
                    android:id="@+id/Rl1"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:text="活动名称"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/activity_name"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:background="@null"
                        android:focusable="false"
                        android:text="名称"
                        android:textAlignment="gravity"
                        android:textColor="@color/skin_topbar_bg_color"
                        android:textSize="19sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/Rl2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">

                    <TextView
                        android:id="@+id/create_name"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:text="举办方"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/activity_create_name"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:background="@null"
                        android:focusable="false"
                        android:text="发布社团"
                        android:textAlignment="gravity"
                        android:textColor="@color/skin_topbar_bg_color"
                        android:textSize="19sp" />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:text="活动地点"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/activity_place"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:background="@null"
                        android:focusable="false"
                        android:text="活动地点"
                        android:textAlignment="gravity"
                        android:textColor="@color/skin_topbar_bg_color"
                        android:textSize="18sp" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:text="活动开始时间"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/start_time"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:background="@null"
                        android:focusable="false"
                        android:text="开始时间"
                        android:textAlignment="gravity"
                        android:textColor="@color/skin_topbar_bg_color"
                        android:textSize="19sp" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/Rl3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">

                    <TextView
                        android:id="@+id/leadingName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:text="活动结束时间"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/end_time"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:background="@null"
                        android:focusable="false"
                        android:text="结束时间"
                        android:textAlignment="gravity"
                        android:textColor="@color/skin_topbar_bg_color"
                        android:textSize="19sp" />
                </RelativeLayout>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="活动简介"
                    android:textColor="#185688"
                    android:textSize="20dp" />
                <TextView
                    android:id="@+id/numact"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:visibility="invisible"
                    android:text="20"
                    android:textSize="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_alignParentRight="true"/>
                <TextView
                    android:id="@+id/numtxt"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:visibility="invisible"
                    android:text="参与人数："
                    android:textSize="20dp"
                    android:layout_marginRight="40dp"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>


                <TextView
                    android:id="@+id/activity_intro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:textColor="#034B84"
                    android:background="@drawable/shape_login_form"
                    android:textSize="16dp" />
        </LinearLayout>
        <Button
            android:id="@+id/apply_but"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:background="@drawable/shape_big_register_btn"
            android:text="申请加入"
            android:visibility="visible"
            android:textColor="@color/white"
            android:textSize="22sp" />
            <Button
                android:id="@+id/act_edit"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:visibility="invisible"
                android:background="@drawable/shape_big_register_btn"
                android:text="修改活动信息"
                android:textColor="@color/white"
                android:textSize="22sp" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>

