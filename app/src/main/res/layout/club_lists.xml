<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:orientation="horizontal"
    android:descendantFocusability="blocksDescendants"
    android:background="@drawable/shape_login_form">

    <com.example.yst.util.XCRoundImageView
        android:id="@+id/logo"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="8dp"
        android:src="@mipmap/portrait"
        android:clickable="true"
        android:focusable="false" />
    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:focusable="false"
        android:descendantFocusability="blocksDescendants"
        android:orientation="vertical">
        <TextView
            android:id="@+id/clubname"
            android:layout_width="match_parent"
            android:focusable="false"
            android:layout_height="30dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="8dp"
            android:background="@null"
            android:textColor="@color/skin_topbar_bg_color"
            android:textAlignment="gravity"
            android:textSize="20sp" />
        <LinearLayout
            android:layout_height="wrap_content"
            android:focusable="false"
            android:descendantFocusability="blocksDescendants"
            android:layout_width="match_parent">
            <ImageView
                android:layout_marginTop="13dp"
                android:layout_marginLeft="30dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:focusable="false"
                android:src="@mipmap/icon"/>
            <TextView
                android:id="@+id/clublevel"
                android:layout_marginTop="8dp"
                android:layout_width="50dp"
                android:layout_height="25dp"
                android:focusable="false"
                android:layout_marginLeft="10dp"
                android:textSize="16sp"
                android:textColor="@color/gary">
            </TextView>
            <TextView
                android:id="@+id/clubcampus"
                android:layout_marginTop="8dp"
                android:layout_width="80dp"
                android:layout_height="25dp"
                android:layout_marginLeft="5dp"
                android:textSize="16sp"
                android:textColor="@color/gary">
            </TextView>

            <TextView
                android:id="@+id/clubkind"
                android:focusable="false"
                android:layout_width="50dp"
                android:layout_height="25dp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="5dp"
                android:textColor="@color/gary"
                android:textSize="16sp"/>
        </LinearLayout>
        <TextView
            android:id="@+id/clubintos"
            android:focusable="false"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="2dp"
            android:textSize="18dp"
            android:textColor="@color/black"/>

    </LinearLayout>

</LinearLayout>