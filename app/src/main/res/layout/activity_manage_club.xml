<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.ManageClubActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/blue">

        <ImageView
            android:id="@+id/back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            app:srcCompat="@android:drawable/ic_media_rew" />
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="22dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginRight="40dp"
            android:layout_marginTop="10dp"
            android:text="管理社团" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">


        <!--        四个功能布局-->
        <TextView
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/shape_blue_blue_gradual"
            android:padding="20dp"
            android:text="我的社团公益社团"
            android:textColor="#fff"
            android:textSize="25dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:orientation="vertical">

<!--            前两个-->
            <LinearLayout
                android:id="@+id/manege_club"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/manage"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="200dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:paddingLeft="15dp">

                    <ImageView
                        android:id="@+id/settingImage"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        app:srcCompat="@mipmap/setting" />
                    <Button
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:text="管 理 社 团"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:background="@drawable/shape_blue_wihte_gradual"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/audit"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="200dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:paddingRight="15dp">

                    <ImageView
                        android:id="@+id/auditImage"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        app:srcCompat="@mipmap/audit" />
                    <Button
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:text="审 核 人 员"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:background="@drawable/shape_blue_wihte_gradual"/>

                </LinearLayout>
            </LinearLayout>

            <!-- 后两个-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/addActivity"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="200dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:paddingLeft="15dp">

                    <ImageView
                        android:id="@+id/addActivityImage"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        />
                    <Button
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:text="创 建 活 动"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:background="@drawable/shape_blue_wihte_gradual"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/addvote"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="200dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:paddingRight="15dp">

                    <ImageView
                        android:id="@+id/voteImage"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        app:srcCompat="@mipmap/vote" />
                    <Button
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:text="发 起 投 票"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:background="@drawable/shape_blue_wihte_gradual"/>

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/textView2"
                android:gravity="center"
                android:paddingTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="~ 更多功能敬请期待 ~"
                android:textColor="@color/blue"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>