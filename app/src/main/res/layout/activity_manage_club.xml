<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.ManageClubActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        android:gravity="center">

        <ImageView
            android:id="@+id/back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            app:srcCompat="@android:drawable/ic_media_rew" />
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/dimenPrimary"
            android:textColor="@color/white"
            android:layout_marginRight="40dp"
            android:text="管理社团" />
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">


            <!--        四个功能布局-->
            <TextView
                android:id="@+id/button_ma"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:background="@drawable/shape_blue_blue_gradual"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="我的社团公益社团"
                android:textColor="#fff"
                android:textSize="25dp"
                android:textStyle="bold" />
            <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:fadingEdge="vertical"
                android:background="@color/backgroundGray"
                android:scrollbars="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="6"
                    android:orientation="vertical">

                    <!--            前两个-->
                    <LinearLayout
                        android:id="@+id/manege_club"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/manage_club"
                            android:layout_width="0dp"
                            android:layout_height="180dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingLeft="15dp">

                            <ImageView
                                android:id="@+id/settingImage"
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                app:srcCompat="@mipmap/setting" />

                            <Button
                                android:layout_width="100dp"
                                android:layout_height="40dp"
                                android:background="@drawable/shape_blue_blue_gradual"
                                android:text="更 新 社 团"
                                android:textColor="@color/white"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/audit"
                            android:layout_width="0dp"
                            android:layout_height="180dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingRight="15dp">

                            <ImageView
                                android:id="@+id/auditImage"
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                app:srcCompat="@mipmap/audit" />

                            <Button
                                android:layout_width="100dp"
                                android:layout_height="40dp"
                                android:background="@drawable/shape_blue_blue_gradual"
                                android:text="审 核 人 员"
                                android:textColor="@color/white"
                                android:textStyle="bold" />

                        </LinearLayout>
                    </LinearLayout>

                    <!-- 后两个-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/addActivity"
                            android:layout_width="0dp"
                            android:layout_height="180dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingLeft="15dp">

                            <ImageView
                                android:id="@+id/addActivityImage"
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                app:srcCompat="@mipmap/addactivity" />

                            <Button
                                android:layout_width="100dp"
                                android:layout_height="40dp"
                                android:background="@drawable/shape_blue_blue_gradual"
                                android:text="查 看 活 动"
                                android:textColor="@color/white"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/addvote"
                            android:layout_width="0dp"
                            android:layout_height="180dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingRight="15dp">

                            <ImageView
                                android:id="@+id/voteImage"
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                app:srcCompat="@mipmap/vote" />

                            <Button
                                android:layout_width="100dp"
                                android:layout_height="40dp"
                                android:background="@drawable/shape_blue_blue_gradual"
                                android:text="发 起 投 票"
                                android:textColor="@color/white"
                                android:textStyle="bold" />

                        </LinearLayout>
                    </LinearLayout>

                    <!-- 后两个-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/manage_news"
                            android:layout_width="0dp"
                            android:layout_height="180dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingLeft="15dp">

                            <ImageView
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                app:srcCompat="@mipmap/setting" />

                            <Button
                                android:layout_width="100dp"
                                android:layout_height="40dp"
                                android:background="@drawable/shape_blue_blue_gradual"
                                android:text="管 理 资 讯"
                                android:textColor="@color/white"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/manage_people"
                            android:layout_width="0dp"
                            android:layout_height="180dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingRight="15dp">

                            <ImageView
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                app:srcCompat="@mipmap/audit" />

                            <Button
                                android:layout_width="100dp"
                                android:layout_height="40dp"
                                android:background="@drawable/shape_blue_blue_gradual"
                                android:text="管 理 人 员"
                                android:textColor="@color/white"
                                android:textStyle="bold" />

                        </LinearLayout>
                    </LinearLayout>

                    <!-- 后两个-->
                    <LinearLayout
                        android:id="@+id/union"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/auditclub"
                            android:layout_width="0dp"
                            android:layout_height="180dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingLeft="15dp">

                            <ImageView
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                app:srcCompat="@mipmap/examine" />

                            <Button
                                android:layout_width="100dp"
                                android:layout_height="40dp"
                                android:background="@drawable/shape_blue_blue_gradual"
                                android:text="审 核 社 团"
                                android:textColor="@color/white"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/manageclub"
                            android:layout_width="0dp"
                            android:layout_height="180dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingRight="15dp">

                            <ImageView
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                app:srcCompat="@mipmap/delete1" />

                            <Button
                                android:layout_width="100dp"
                                android:layout_height="40dp"
                                android:background="@drawable/shape_blue_blue_gradual"
                                android:text="管 理 社 团"
                                android:textColor="@color/white"
                                android:textStyle="bold" />

                        </LinearLayout>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingTop="10dp"
                        android:text="~ 更多功能敬请期待 ~"
                        android:textColor="@color/blue" />

                </LinearLayout>
            </ScrollView>

        </LinearLayout>
    </ScrollView>



</LinearLayout>