<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/blue">
        <ImageView
            android:id="@+id/back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            app:srcCompat="@android:drawable/ic_media_rew" />
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="22dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginRight="40dp"
            android:layout_marginTop="10dp"
            android:text="发布投票" />

    </LinearLayout>

<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:orientation="vertical"
        android:background="@color/backgroundGray"
        android:scrollbars="vertical">


        <!-- 最外层-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/backgroundGray"
            android:orientation="vertical"
            android:paddingTop="5dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:paddingLeft="10dp"
                android:textSize="18dp"
                android:textColor="@color/color_606060"
                android:text="标题" />
            <!-- 投票标题-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:background="@drawable/shape_popup"
                android:padding="10dp">

                <!-- 单项-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_margin="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="投票标题:"
                            android:textColor="#272727"
                            android:textSize="22dp" />

                        <EditText
                            android:id="@+id/vote_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:background="@null"
                            android:hint="请输入投票标题"
                            android:inputType="textNoSuggestions"
                            android:layout_centerVertical="true"
                            android:textColor="#000000"
                            android:layout_alignParentRight="true"
                            android:textColorHint="#bcbcbc"
                            android:textSize="@dimen/commontext" />


                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#c8c8c8" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:layout_marginTop="15dp"
                android:textSize="18dp"
                android:textColor="@color/color_606060"
                android:text="介绍" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:background="@drawable/shape_popup"
                android:orientation="vertical">
                <TextView
                    android:layout_width="160dp"
                    android:layout_height="30dp"
                    android:text="活动介绍："
                    android:paddingLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:textSize="@dimen/commontext"
                    android:layout_alignParentLeft="true" />

                <EditText
                    android:id="@+id/vote_intro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="请对投票活动以及备选选项进行详细介绍"
                    android:ems="10"
                    android:gravity="start|top"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:inputType="textMultiLine" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="选项"
                    android:textSize="18dp"
                    android:layout_marginTop="5dp"
                    android:paddingLeft="5dp"
                    android:textColor="@color/color_606060"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:background="@drawable/shape_popup"
                    android:padding="15dp">

                    <!-- 单项-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:layout_margin="10dp"
                            >

                            <ImageView
                                android:id="@+id/item1"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@mipmap/finish"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_toRightOf="@+id/item1"
                                android:text="选项一"
                                android:layout_marginLeft="10dp"
                                android:textColor="#272727"
                                android:textSize="18dp" />
                            <EditText
                                android:id="@+id/vote_item1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:background="@null"
                                android:hint="@string/create_hint2"
                                android:inputType="textNoSuggestions"
                                android:layout_centerVertical="true"
                                android:textColor="#000000"
                                android:layout_alignParentRight="true"
                                android:textColorHint="#bcbcbc"
                                android:textSize="@dimen/commontext" />

                        </RelativeLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:background="#c8c8c8" />

                    </LinearLayout>
                    <!-- 单项-->
                    <!-- 单项-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:layout_margin="10dp"
                            >

                            <ImageView
                                android:id="@+id/item2"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@mipmap/finish"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_toRightOf="@+id/item2"
                                android:text="选项二"
                                android:layout_marginLeft="10dp"
                                android:textColor="#272727"
                                android:textSize="18dp" />
                            <EditText
                                android:id="@+id/vote_item2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:background="@null"
                                android:hint="@string/create_hint2"
                                android:inputType="textNoSuggestions"
                                android:layout_centerVertical="true"
                                android:textColor="#000000"
                                android:layout_alignParentRight="true"
                                android:textColorHint="#bcbcbc"
                                android:textSize="@dimen/commontext" />

                        </RelativeLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:background="#c8c8c8" />

                    </LinearLayout>
                    <!-- 单项-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:layout_margin="10dp"
                            >

                            <ImageView
                                android:id="@+id/item3"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@mipmap/finish"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_toRightOf="@+id/item3"
                                android:text="选项三"
                                android:layout_marginLeft="10dp"
                                android:textColor="#272727"
                                android:textSize="18dp" />
                            <EditText
                                android:id="@+id/vote_item3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:background="@null"
                                android:hint="@string/create_hint2"
                                android:inputType="textNoSuggestions"
                                android:layout_centerVertical="true"
                                android:textColor="#000000"
                                android:layout_alignParentRight="true"
                                android:textColorHint="#bcbcbc"
                                android:textSize="@dimen/commontext" />

                        </RelativeLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:background="#c8c8c8" />

                    </LinearLayout>
                    <!-- 单项-->

                </LinearLayout>

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="设置"
                android:textSize="18dp"
                android:layout_marginTop="5dp"
                android:paddingLeft="5dp"
                android:textColor="@color/color_606060"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@drawable/shape_popup"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="截止时间"
                        android:layout_marginLeft="10dp"
                       android:layout_centerVertical="true"
                        android:textSize="18dp" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true">
                        <TextView
                            android:id="@+id/chooseDay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:text="选择日期"
                            android:textSize="18dp"
                            android:textColor="#4C4A4A"
                            />
                        <TextView
                            android:id="@+id/chooseTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="选择时间"
                            android:textSize="18dp"
                            android:textColor="#4C4A4A"
                            />
                    </LinearLayout>



                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="#c8c8c8" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="vertical"
            android:gravity="center"
            >

            <Button
                android:id="@+id/vote_but"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:background="@drawable/shape_register_login_btn"
                android:text="点击发布"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>